{
  "name": "sgsgym",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:front": "npm run dev -w packages/front",
    "dev:back": "npm run build -w @sgsgym/db && npm run dev -w @sgsgym/back",
    "build:front": "npm run build -w packages/front",
    "build:back": "npm run build -w packages/back",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7"
  }
}
